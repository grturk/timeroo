<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".Homepage">

  <ImageView
      android:id="@+id/logoImageView"
      android:layout_width="171dp"
      android:layout_height="182dp"
      android:layout_marginStart="8dp"
      android:layout_marginTop="36dp"
      android:layout_marginEnd="8dp"
      android:src="@drawable/timers"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.497"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <LinearLayout
      android:id="@+id/titleLinearLayout"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_marginTop="16dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@id/logoImageView">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Timeroo"
        android:textAppearance="@style/titleStyle" />
  </LinearLayout>

  <Button
      android:id="@+id/firstGreenButton"
      android:layout_width="258dp"
      android:layout_height="100dp"
      android:layout_marginHorizontal="25dp"
      android:layout_marginBottom="20dp"
      android:background="@drawable/rounded_button_green_1"
      android:paddingVertical="20dp"
      android:text="Classic"
      android:textAppearance="@style/basicButtons"
      android:theme="@null"
      app:layout_constraintBottom_toTopOf="@+id/secondGreenButton"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent" />

  <Button
      android:id="@+id/secondGreenButton"
      android:layout_width="258dp"
      android:layout_height="100dp"
      android:layout_marginHorizontal="25dp"
      android:layout_marginBottom="20dp"
      android:background="@drawable/rounded_button_green_2"
      android:paddingVertical="20dp"
      android:text="Gymnastics"
      android:textAppearance="@style/basicButtons"
      android:theme="@null"
      app:layout_constraintBottom_toTopOf="@+id/thirdGreenButton"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent" />

  <Button
      android:id="@+id/thirdGreenButton"
      android:layout_width="258dp"
      android:layout_height="100dp"
      android:layout_marginHorizontal="25dp"
      android:layout_marginBottom="60dp"
      android:background="@drawable/rounded_button_green_3"
      android:paddingVertical="20dp"
      android:text="Intervals"
      android:textAppearance="@style/basicButtons"
      android:theme="@null"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
